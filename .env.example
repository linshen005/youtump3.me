# Flask配置
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=0

# 服务器配置
PORT=5001
HOST=0.0.0.0

# 安全配置
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=https://youtump3.me,https://www.youtump3.me

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 性能配置
RATE_LIMIT=10
RATE_WINDOW=60
MAX_WORKERS=4
TIMEOUT=120

# 存储配置
STATIC_FOLDER=static
MAX_CONTENT_LENGTH=104857600  # 100MB